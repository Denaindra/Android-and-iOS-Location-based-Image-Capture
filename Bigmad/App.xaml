<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="XamarinKit.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="BackgroundColor">#0C89BF</Color>
            <Style x:Key="GobalButton" TargetType="Button">
                <Setter Property="BackgroundColor" Value="#58ABCF" />
                <Setter Property="TextColor" Value="#FFFFFF" />
                <Setter Property="FontAttributes" Value="Bold" />
            </Style>
                   <Style x:Key="GobalLabel" TargetType="Label">
                <Setter Property="TextColor" Value="#FFFFFF" />
                <Setter Property="FontAttributes" Value="Bold" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>